<section id="demo-view" class="subpage-body view initially-hidden-pane">

    <div id="wrapper">
        <!-- the content -->
        <div id="sub-content-center">
            <div class="ui-layout-center">
                @*need this wrapping div to show propperly load mask if needed in feature*@
                <div style="position: absolute; top: 0px; left: 0px; height: 100%; width:100%; overflow:auto; padding: 5px;">
                    @*actuall container that should be used to place anything inside center pane(panel)*@
                    <div id="center-inner" style="width:100%; height:100%;">
                    </div>
                </div>
            </div>
            <div id="west-pane-div" class="ui-layout-west" style="height: 100%; width: 100%; overflow: auto; padding: 5px;">

                @*actuall container that should be used to place anything inside center pane(panel)*@
                <div>
                    <div class="row" style="width:100%; margin-left: 0px; margin-right: 0px;">
                        <div class="col-sm-4">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label>User name</label>
                                    <input id="inpUserName" type="text" class="form-control" placeholder="Username" value="demo" />
                                </div>

                                <div class="form-group">
                                    <label>Password</label>
                                    <input id="inpPass" type="password" class="form-control" placeholder="Password" value="searoc" />
                                </div>

                                <div class="form-group">
                                    <label>WMS Url</label>
                                    <input id="inpWmsUrl" type="text" class="form-control" placeholder="WMS Url" value="http://gis-demo.seaplanner.com:8080/ows?" />
                                </div>

                                <div class="form-group">
                                    <a href="#" class="btn btn-warning" id="btnGetWmsCapabilities" onclick="Gnx.West.getWmsCapabilitiesCredentials()">
                                        <i class="glyphicon glyphicon-refresh"></i>&nbsp;Get Capabilities
                                    </a>
                                </div>
                                <div class="form-group">
                                    <label>WFS Url</label>
                                    <input id="inpWfsUrl" type="text" class="form-control" placeholder="WFS Url" value="http://gis-demo.seaplanner.com:8080/ows?" />
                                </div>
                                <div class="form-group">
                                    <a href="#" class="btn btn-warning" id="btnGetWfsCapabilities" onclick="Gnx.West.getWfsCapabilitiesCredentials()">
                                        <i class="glyphicon glyphicon-refresh"></i>&nbsp;Get Capabilities
                                    </a>
                                </div>

                            </div>
                            <div class="bg-info" style="padding:5px;margin-left: -15px;">
                                When loading Capabilities previously loaded layers will be removed.
                                Which means - only WMS or WFS layers can be visible at time.
                            </div>
                        </div>
                        <div class="col-sm-8" id="gnx-layers-grid">
                            <div class="bg-info" >
                                Add layers and click on the map to get WMS feature info ot vector feature data
                            </div>
                            <table class="table table-striped table-bordered table-condensed">
                                <thead>
                                    <tr>
                                        <th />
                                        <th />
                                        <th>Visible</th>
                                        <th>Queryable</th>
                                        <th>Name</th>
                                        <th>Title</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody data-bind='foreach: layers'>
                                    <tr>
                                        <td><input type="button" class="btn btn-info btn-xs" value="add to map" data-bind="disable: isOnMap, click: $root.addLayer2Map" /></td>
                                        <td><input type="button" class="btn btn-danger btn-xs" value=" [x] delete " data-bind="click: $root.removeLayer" /></td>
                                        <td><input type="checkbox" data-bind="checked: visible, enable: isOnMap" /></td>
                                        <td><input type="checkbox" data-bind="checked: queryable, disable: true" /></td>
                                        <td><input type="text" class='required' data-bind="value: name" readonly /></td>
                                        <td><input class='required' data-bind="value: title" readonly /></td>
                                        <td><input class='required' data-bind="value: type" readonly /></td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <link type="text/css" rel="stylesheet" href="//openlayers.org/en/v3.0.0/css/ol.css" />
    <script type="text/javascript" src="//openlayers.org/en/v3.0.0/build/ol.js"></script>

    @*link ol3 layer switcher control*@
    @*<link href="~/Scripts/ol3-layerswitcher/src/ol3-layerswitcher.css" rel="stylesheet" />
        <script src="~/Scripts/ol3-layerswitcher/src/ol3-layerswitcher.js"></script>*@

    @*link ol3 popup control*@
    <link href="~/Scripts/ol3-popup/src/ol3-popup.css" rel="stylesheet" />
    <script src="~/Scripts/ol3-popup/src/ol3-popup.js"></script>

    @*link OpenLayers2 for WFS capabilities parsing*@
    @Scripts.Render("~/bundles/OpenLayers2")

    @*<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/openlayers/2.12/OpenLayers.min.js"></script>*@

</section>
